<%= link_to "Back", cocktails_path, class: "btn btn-primary"%>

<h2><%= @cocktail.name %></h2>

<ul>
<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description %> de <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete %></li>
<% end %>
<ul>


<div class="container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all %>
  <%= f.submit "add ingredient", class: "btn btn-primary" %>
<% end %>
</div>
